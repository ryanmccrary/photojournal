<div class="page-header">
<h4>Photojournal Entries</h4>
</div>

<% @entries.each do |entry| %>

<div class="row">
<div class="entry">
  <div class="span4">

    <%= image_tag entry.image.url(:thumb), class: "img-polaroid left" %>

  </div>
  <div class="span8">
    <p class="entrycopy"><%= entry.copy %></p>
  </div>
</div>
</div>

<div class="row">
  <div class="span12">
    <p class="pull-right">
              <% if current_user.id == entry.user_id %>

        <%= link_to "Edit", edit_entry_path(entry) %> |
        <%= link_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this entry?"} %> |

              <% else %>
              --
              <% end %>
    <%= link_to time_ago_in_words(entry.created_at) + " ago", entry %> by <%= entry.user.profile_name %>
    </p>
  </div>
</div>
<hr />

<% end %>
